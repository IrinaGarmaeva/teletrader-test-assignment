{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "react",
      "react-dom",
      "react-router-dom"
      // ...other options
    ]
  },
  "include": ["./src/**/*"]
}
